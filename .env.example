# ====================
# ENVIRONMENT SWITCHER
# ====================
# Set to true for production Supabase, false for local Docker
NEXT_PUBLIC_PROD_DB=false

# =============================
# PRODUCTION DATABASE (Supabase Cloud)
# =============================
NEXT_PUBLIC_PROD_DATABASE_URL=
NEXT_PUBLIC_PROD_SUPABASE_URL=
NEXT_PUBLIC_PROD_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
NEXT_PUBLIC_PROD_SUPABASE_ANON_KEY=

# ===========================
# LOCAL DATABASE (Docker)
# ===========================
NEXT_PUBLIC_LOCAL_DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres
NEXT_PUBLIC_LOCAL_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_LOCAL_SUPABASE_SERVICE_ROLE_KEY=
NEXT_PUBLIC_LOCAL_SUPABASE_ANON_KEY=

# =================
# CI/CD SETTINGS
# =================
# Supabase project reference ID (for migrations)
SUPABASE_PROJECT_REF=
# Access token for Supabase CLI (get from: https://supabase.com/dashboard/account/tokens)
SUPABASE_ACCESS_TOKEN=your_access_token_here


# Next.js settings
NEXT_TELEMETRY_DISABLED=1